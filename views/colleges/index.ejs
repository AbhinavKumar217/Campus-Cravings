<% layout('layouts/boilerplate')%>
<body>
    <h1>All Colleges</h1>
    <div>
        <a href="/colleges/new">Add a college</a>
    </div>
        <% for(let college of colleges) {%> 
            <!-- <li><a href="/campgrounds/<%=campground._id%>"><%= campground.title %></a></li> -->
            <div class="card mb-3" >
                <div class="row">
                    <div class="col-mg-8">
                        <div class="card-body">
                            <div class="card-title">
                                <h5 class="card-title"><%= college.title %></h5>
                                <p class="card-text"><%= college.description %></p>
                                <p class="card-text">
                                    <small class="text-muted"><%= college.location %></small>
                                </p>
                                <a class="btn btn-primary" href="/colleges/<%=college._id%>">View <%=college.title%></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
